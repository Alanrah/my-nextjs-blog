{
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended",
        "eslint-config-prettier",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "rules": {
        "quotes": [
            "warn",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "no-unused-vars": "warn"
    }
}
